on:
  workflow_dispatch:
  push:
    branches:
      - main
  schedule:
    - cron: "0 2 1-31 * *"

jobs:
  e2e-tests:
    runs-on: ubuntu-latest # or macos-latest, windows-latest

    steps:
      - uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v2.5.1
        timeout-minutes: 1
        with:
          node-version: 16

      - uses: microsoft/playwright-github-action@v1
      - name: run CodeceptJS tests
        run: |
          npm ci
          npm run test
